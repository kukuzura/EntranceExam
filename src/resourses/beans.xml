<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="by.yurusova"/>
    <context:annotation-config />
    <bean id="userDAO" class="by.yurusova.entranceExam.dao.UserDAOImpl" />
    <bean id="userService" class="by.yurusova.entranceExam.service.UserServiceImpl" >
        <property name="userDAO" ref="userDAO"/>
    </bean>

    <bean id="registrationController" class="by.yurusova.entranceExam.controller.RegistrationController">
    <property name="userService" ref="userService" />
    </bean>
</beans>